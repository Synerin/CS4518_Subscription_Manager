<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/budget_breakdown"
            android:textSize="30sp"
            android:gravity="center"/>

        <ProgressBar
            android:id="@+id/spending_chart"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <!-- Will need to add chart here -->
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weekly_total"
        android:layout_gravity="center"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/monthly_total_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:layout_gravity="center"
        android:textSize="40sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="@string/top_expenses"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/expense_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"/>
        <TextView
            android:id="@+id/expense_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"/>
        <TextView
            android:id="@+id/expense_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"/>

    </LinearLayout>

</LinearLayout>