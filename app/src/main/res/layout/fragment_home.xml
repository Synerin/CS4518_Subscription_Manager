<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/budget_percentage_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/budgetReached"
            android:textSize="30sp"
            android:layout_marginTop="30dp"/>

        <ProgressBar
            android:id="@+id/budget_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/upcoming_expenses_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:text="@string/upcomingExpenses"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/upcoming_expenses_value_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$x.xx"
            android:textSize="36sp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/soonest_expense_one_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soonest expense (Date)"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/soonest_expense_two_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2nd soonest expense (Date)"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/soonest_expense_three_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3rd soonest expense (Date)"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/filter_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter Payments"
            android:textSize="18sp"
            android:layout_marginTop="30dp"/>

        <ListView
            android:id="@+id/filtered_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>