<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:layout_gravity="center_horizontal"
    tools:context=".SignUpActivity">


    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:text="Subscription \nManager" />

    <TextView
        android:id="@+id/emailTextSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/editTextEmailAddressSignIn"
        app:layout_constraintStart_toStartOf="@id/editTextEmailAddressSignIn"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="Sign in with email" />

    <EditText
        android:id="@+id/editTextEmailAddressSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginText"
        android:layout_marginTop="80dp"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@drawable/selector"
        android:textColor="@android:color/white"
        android:ems="15"
        android:hint="Sign in with Email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/passwordTextSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/editTextPasswordSignIn"
        app:layout_constraintStart_toStartOf="@id/editTextPasswordSignIn"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="Password" />

    <EditText
        android:id="@+id/editTextPasswordSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextEmailAddressSignIn"
        android:layout_marginTop="60dp"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@drawable/selector"
        android:textColor="@android:color/white"
        android:ems="15"
        android:hint="Password"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/signInButton"
        android:layout_width="120dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextPasswordSignIn"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorPrimary"
        android:text="Sign In" />

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signInButton"
        android:layout_marginTop="60dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="Don't have an account? Sign Up!" />
</androidx.constraintlayout.widget.ConstraintLayout>